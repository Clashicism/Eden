{
  "name": "gateway.cash",
  "version": "1.0.0",
  "description": "Payment Processor for Bitcoin Cash",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gatewaycash/gateway.git"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "modules/*"
    ]
  },
  "keywords": [
    "bitcoin",
    "cash"
  ],
  "scripts": {
    "start-development-website": "yarn workspace @gatewaycash/website start",
    "build-production-website": "yarn workspace @gatewaycash/website build",
    "start-development-api-server": "yarn workspace @gatewaycash/api dev",
    "start-production-api-server": "yarn workspace @gatewaycash/api production",
    "build-paybutton": "yarn workspace @gatewaycash/paybutton build",
    "build": "yarn build-paybutton && yarn build-production-website"
  },
  "author": "The Gateway Project Developers <hello@gateway.cash>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/gatewaycash/gateway/issues"
  },
  "homepage": "https://github.com/gatewaycash/gateway#readme",
  "dependencies": {
    "babel-eslint": "9.0.0",
    "eslint": "5.6.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "prettier": "^1.15.2"
  }
}
